<h4>
  <% page_title ||= "Passenger Changes" %>
  <%= page_title %>
</h4>



<%= form_for @passenger do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :phone_num %>
  <%= f.text_area :phone_num %>
</div>

<div>
  <%= f.submit %>
</div>
<% end %>

<div>
<%= link_to "List of Passengers", passengers_path %>
</div>

<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
