
<h2>Passengers</h2>

<section class="passenger-form">
<%= form_tag(passengers_path, :method => "get", id: "search-form") do %>
<h4>Search Form</h4>
<%= text_field_tag :search, params[:search], placeholder: "Search Passengers" %>
<%= submit_tag "Search" %>
<% end %>
</section>

<% if !(@passengers.present?) %>
  <p>There are no passengers containing the term(s) <%= params[:search] %>.</p>
<% end %>

<section class = "add-link">
<%= link_to "Add a New Passenger", new_passenger_path%>
</section>


<ul>

  <% @passengers.each do |passenger| %>
  <section class = "passenger-box"
  <aside class = "passenger-header">
  <li>
    <%= passenger.id %>
    <strong>
    <%= link_to passenger.name, passenger_path(passenger) %>
    </strong>
  </li>
</aside>
   <li>
    <%= passenger.phone_num %>
    </li>
    <aside class = "passenger-footer">
    <li>
    <%= link_to "Edit", edit_passenger_path(passenger) %>
    <%= link_to("Delete", passenger_path(passenger), method: :delete, data: { confirm: "Are you sure you want to delete this passenger?" }) %>
  </li>
</aside>
</section>
  <% end %>

</ul>
