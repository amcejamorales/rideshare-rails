<section>
  <h2>Trip Details</h2>
  <h3>Trip ID:<%= @trip.id %></h3>
  <h3>Passenger: <%= @trip.passenger.name %></h3>
  <h3>Driver: <%= @trip.driver.name %></h3>
  <h3>Cost: <%= @trip.cost %></h3>
  <h3>Date: <%= @trip.date %></h3>
  <h3>Rating:<%= @trip.rating %></h3>
  <li>

    <%= link_to("Delete", trip_path(@trip), method: :delete, data: { confirm: "Are you sure you want to delete this passenger?" }) %>
    <%= link_to "List of Trips", trips_path %>
  </li>
</section>
