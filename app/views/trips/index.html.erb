<h2>Trips</h2>

<ul>
  <% @trips.each do |trip| %>
  <li>
    <strong>
    <%= link_to trip.id, trip_path(trip) %>.
    </strong>
    <%= trip.passenger.name %>
    <%= trip.driver.name %>
    <%= trip.date %>
    <%= trip.rating %>
    <%= trip.cost %>

    <%= link_to "Edit", edit_trip_path(trip) %>
    <%= link_to("Delete", trip_path(trip), method: :delete, data: { confirm: "Are you sure you want to delete this trip?" }) %>

  </li>
  <% end %>
</ul>
